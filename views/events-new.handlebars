<form method="POST" action="/events">
  <fieldset>
    <legend>New Event</legend>
    <div class="mb-3">
      <label class="form-label" for="title">Title</label><br>
      <input class="form-control" type="text" name="title" />
    </div>
    <div class="mb-3">
      <label class="form-label" for="imgUrl">Image URL</label><br>
      <input class="form-control" type="text" name="imgUrl" />
    </div>
    <div class="mb-3">
      <label class="form-label" for="desc">Description</label><br>
      <textarea class="form-control" type="text" name="desc"></textarea>
    </div>
  </fieldset>
  <button type="submit" class="btn btn-primary">Save</button>
</form>
